     *        required = true,
     *        type = "integer"
     *     ),
     *     @SWG\Parameter(
     *        in = "formData",
     *        name = "end_time",
     *        description = "结束时间",
     *        required = true,
     *        type = "integer"
     *     ),
     *     @SWG\Parameter(
     *        in = "formData",
     *        name = "is_holiday",
     *        description = "是否转休假",
     *        required = false,
     *        type = "integer"
     *     ),
     *     @SWG\Parameter(
     *        in = "formData",
     *        name = "content",
     *        description = "注释说明",
     *        required = false,
     *        type = "integer"
     *     ),
     *     @SWG\Response(
     *         response = 200,
     *         description = "培训列表"
     *     ),
     *     @SWG\Response(
     *         response = 403,
     *         description = "操作失败",
     *     )
     * )
     *
     **/
    public function actionAddOvertime(){
        $work_station = $this->workStation;
        $firstName = $this->firstName;
        if($firstName == ''){
            $firstName = $this->userName;
        }
        $userId = $this->userId;
        $data = yii::$app->request->post();
        $overtime = new Overtime();
        $model = $overtime->addovertime($data,$firstName,$work_station,$userId);
        if($model === 2){
            $this->serializer['message'] = '请输入组内正确人员姓名';
            $this->serializer['status'] = false;
            return false;
        }
        return $model;
    }





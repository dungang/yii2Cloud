        //专业杂志
        $journal = $data['journal'];
        if(!empty($journal)){
            $journal_str = '';
            foreach ($journal as $k => $v){
                $num = $k+1;
                $journal_str.=$num.'、'.$v['journal_name'].$v['job'].'<w:br />';
